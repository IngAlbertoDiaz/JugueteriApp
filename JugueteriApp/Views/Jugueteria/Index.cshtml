@model IEnumerable<JugueteriApp.Models.Producto>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Juguetes</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-action="Create">Agregar producto</a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Restriccion</th>
                    <th>Precio</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nombre</td>
                    @if (item.RestriccionEdad != 0)
                    {
                        <td>Si</td>
                    }
                    else
                    {
                        <td>No</td>
                    }
                    <td>@item.Precio</td>
                    <td>
                        <div class="text-center">
                            <a asp-controller="Jugueteria" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-outline-info mx-1">Actualizar</a>
                            <a asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-outline-danger mx-1">Eliminar</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="container text-center" style="padding-top:20%;">
            <h3>No se encontraron resultados :(</h3>
        </div>
    }
</div>
